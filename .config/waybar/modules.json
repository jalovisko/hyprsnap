{
    "hyprland/workspaces":{
        "format": "{icon} {name}",
        "format-icons": {
          "active": "",
          "default": ""
        }
    },
    "hyprland/window":{
        "format":"󰣆  {title}",
        "max-length":60,
        "separate-outputs":false
    },
    "cpu":{
        "interval":5,
        "format":"󰘚 {usage}%",
        "max-length":10,
        "on-click": "alacritty -e bashtop"
    },
    "memory":{
        "interval":5,
        "format":"󰆼 {percentage}%",
        "max-length":10,
        "on-click": "alacritty -e bashtop"
    },
    "backlight":{
        "device":"intel_backlight",
        "format":"{icon}",
        "format-icons":[
            "󰃜",
            "󰃛",
            "󰃝",
            "󰃞",
            "󰃟",
            "󰃠"
        ],
        "scroll-step":5.0,
        "tooltip":false
    },
    "wireplumber":{
        "format":"{icon}",
        "format-muted":"󰖁",
        "format-icons":[
            "󰕿",
            "󰖀",
            "󰕾"
        ],
        "tooltip":false,
        "on-click":"changevolume mute",
        "scroll-step":5.0
    },
    "hyprland/language":{
        "format": "{}",
        "format-en":"en",
        "format-ru":"ru",
        "keyboard-name":"kingston-hyperx-alloy-fps-pro-mechanical-gaming-keyboard-1",
        // "keyboard-name":"at-translated-set-2-keyboard",
        "on-click":"hyprctl switchxkblayout kingston-hyperx-alloy-fps-pro-mechanical-gaming-keyboard-1 next"
    },
    "battery":{
        "format":"{icon}",
        "format-charging": "󰚥 {icon}",
        "format-full": "",
        "format-icons":[
            "",
            "",
            "",
            "",
            ""
        ],
        "tooltip-format":"{timeTo}"
    },
    "bluetooth":{
        "format": "",
        "format-on":"",
        "format-off":"󰂲",
        "format-connected":"󰂱",
        "on-click":"rofi-bluetooth",
        "tooltip":false
    },
    "network":{
        "interface":"wlan0",
        "format-wifi":"{icon}",
        "format-icons":[
            "󰤯",
            "󰤟",
            "󰤢",
            "󰤥",
            "󰤨"
        ],
        "format-disconnected":"󰤮",
        "on-click": "rofi -show wifi -modi 'wifi:iwdrofimenu' -theme wifi-select.rasi",
        "tooltip": false
    },
    "clock":{
        "format":"{:%H:%M}",
        "format-alt":"{:%A %d.%m}"
    }
}
